<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => 'login-form',:role=>'form'}) do |f| %>
  <h3 class="form-title">登 录</h3>
  <!--   <div class="alert alert-danger display-hide">
    <button class="close" data-close="alert"></button>
    <span>
      Enter any username and password. </span>
  </div> -->
  <div class="form-group">
    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
    <%= f.label :email, '邮箱',:class=>"control-label visible-ie8 visible-ie9" %>
    <%= f.text_field :email, {:class=>'form-control form-control-solid placeholder-no-fix', type: "text", autocomplete: "off", placeholder: "邮箱"} %>
  </div>
  <div class="form-group">
    <%= f.label :password, '密码',:class=>"control-label visible-ie8 visible-ie9"  %>
    <%= f.text_field :password, {autocomplete: "off" , :class=>'form-control form-control-solid placeholder-no-fix', type: "password", placeholder: "密码"} %>
  </div>
  <div class="form-actions">
    <%= f.submit '登录' ,:class=>'btn btn-success uppercase' %>
    <% if devise_mapping.rememberable? -%>
      <label class="rememberme check">
        <%= f.text_field :remember_me, { type:"checkbox", value: "1" } %>记住密码
      </label>
    <% end -%>
  </div>
<% end %>